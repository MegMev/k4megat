    <info name="Megat_v0.1" title="Megat Detector (design model)" author="Yong Zhou" url="https://github.com/MegMev" status="development" version="0.1">
        <comment>The compact format for the Megat Detector - design model </comment>
    </info>

    <!-- Material definitions -->
    <includes>
        <gdmlFile ref="../material/elements.xml" />
        <gdmlFile ref="../material/materials.xml" />
    </includes>

    <!-- Visual setting -->
    <display>
        <vis name="VesselVis" alpha="0.0" r="0.83" g="0.84" b="0.86" showDaughters="true" visible="true" />

        <!-- CZT vis -->
        <vis name="CztCrystalVis" alpha="0.0" r="0.0" g="0.4" b="0.8" showDaughters="true" visible="true" />
        <vis name="CztPcbVis" alpha="0.9" r="0.18" g="0.8" b="0.44" showDaughters="true" visible="true" />

        <!-- TPC vis -->
        <vis name="TpcReadoutVis" alpha="0.0" r="1.0" g="0.0" b="0.4" showDaughters="true" visible="true" />
        <vis name="TpcCageVis" alpha="0.0" r="0.8" g="0.8" b="0.8" showDaughters="true" visible="true" />
        <vis name="TpcFiducialVis" alpha="0" r="0.2" g="1.0" b="1.0" showDaughters="true" visible="true" />
    </display>

    <!-- General dimensions -->
    <define>
        <constant name="world_side" value="5*m" />
        <constant name="world_x" value="world_side/2" />
        <constant name="world_y" value="world_side/2" />
        <constant name="world_z" value="world_side/2" />

        <constant name="fiducial_x" value="50*cm/2" />
        <constant name="fiducial_y" value="50*cm/2" />
        <constant name="fiducial_z" value="50*cm/2" />
    </define>

    <!-- Calorimeter Variates -->
    <include ref="CZT.xml" />
    <!-- <include ref="CZT_mono.xml" /> -->
    <!-- <include ref="CZT_side.xml" /> -->
    <!-- <include ref="CZT_layer.xml" /> -->

    <!-- TPC -->
    <include ref="TPC.xml" />

    <!-- Passive components -->
    <include ref="Passives.xml" />
    <!-- <include ref="Passives_simple.xml" /> -->
    <!-- <include ref="Passives_test.xml" /> -->

    <!-- Placeholder for auxiliary detectors  -->
